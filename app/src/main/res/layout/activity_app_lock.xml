<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
<LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:gravity="center"
    android:layout_height="wrap_content">
    <Button
        android:id="@+id/btn_unlock"
        android:onClick="unlockClick"
        android:background="@mipmap/tab_left_pressed"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="未加锁"/>
    <Button
        android:id="@+id/btn_lock"
        android:onClick="lockClick"
        android:background="@mipmap/tab_right_default"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="已加锁"/>
</LinearLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/ll_unlock"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_unlock_count"
                android:text="未加锁软件11个"
                android:textSize="16sp"
                android:textColor="#fff"
                android:background="@android:color/darker_gray"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <ListView
                android:id="@+id/lv_unlock_app"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_lock"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_lock_count"
                android:text="已加锁软件11个"
                android:textSize="16sp"
                android:textColor="#fff"
                android:background="@android:color/darker_gray"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <ListView
                android:id="@+id/lv_lock_app"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>
    </FrameLayout>

</LinearLayout>